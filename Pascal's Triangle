/*Pascal's Triangle*/
#include <stdio.h>
int main()
{
    int n, i, j,a=1,k;
    printf("Enter number of rows: ");
    scanf("%d",&n);
    for(i=0; i<n; i++)
    {
        
        for(k=1;k<=n-i;k++)
        	printf("  ");
        for(j=0; j <= i; j++)
        {
            if (j==0)
                a = 1;
            else
                a = a*(i-j+1)/j;
            printf("%4d", a);
        }
        printf("\n");
    }
    return 0;
}
