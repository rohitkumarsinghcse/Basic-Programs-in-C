/*Given number is a perfect number or not*/
#include<stdio.h>
#include<conio.h>
void main()
{
 int i,n,sum=0;
 clrscr();
 printf("Enter any number:");
 scanf("%d",&n);
 for(i=1;i<n;i++)
 {
   if(n%i==0)
   {
     sum=sum+i;
   }
 }
  if(n==sum)
  printf("%d is a perfect number",n);
  else
  printf("%d is not a perfect number",n);
 getch();
}
